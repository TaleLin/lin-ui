page{
  background-color: #f5f6fa;
}

.background-head{
  width: 100%;
  height: 232rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -9;
}

.text-head{
  font-size:32rpx;
  line-height:58rpx;
  color:rgba(255,255,255,1);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 32rpx;
}

.body-container{
  width:100%;
  padding: 60rpx;
  box-sizing: border-box;
  background:linear-gradient(180deg,rgba(232,237,244,1) 0%,rgba(245,246,250,1) 5%,rgba(245,246,250,1) 100%);
  opacity:1;
  border-radius:30rpx 30rpx 0px 0px;
  display: flex;
  flex-direction: column;
}

.navigation-bar-text{
  width:628rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 12rpx rgba(0,0,0,0.02);
  border-radius:20rpx;

  font-size:28rpx;
  line-height:40rpx;
  color:rgba(0,0,0,1);
  letter-spacing:6rpx;

  padding: 30rpx;
  box-sizing: border-box;
  text-align: justify;
  margin-bottom: 60rpx;
}

.center-container{
  display: flex;
}

.center-card{
  width:272rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 12rpx rgba(0,0,0,0.02);
  border-radius:20rpx;
  padding: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.center-card:not(:last-child){
  margin-right: 84rpx;
}

.center-card-icon-wrapper{
  display: flex;
  align-items: center;
}

.center-card-icon-wrapper>view{
  font-size:28rpx;
  line-height:1;
  color:rgba(0,0,0,1);
  letter-spacing:2rpx;
  margin-left: 16rpx;
}

.center-card-detail{
  margin-top: 40rpx;
  font-size:24rpx;
  line-height:40rpx;
  color:rgba(0,0,0,1);
  text-align: justify;
}

.bottom-container{
  margin-top: 60rpx;
  width:628rpx;
  height:316rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 12rpx rgba(0,0,0,0.02);
  border-radius:20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
