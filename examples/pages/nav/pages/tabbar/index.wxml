<!--pages/nav/pages/tabs/index.wxml-->

<view class='container'>
  <content-title name="TabBar" describe="自定义标签页">
    <content-card l-content="content" name="基本使用">
    <view class='tabbar-wrapper'>
      <l-tabbar
        position="custom"
        color="{{config.color}}"
        selected-color="{{config.selectedColor}}"
        border-style="{{config.borderStyle}}"
        backgroundColor="{{config.backgroundColor}}"
        list="{{config.list}}"/> 
    </view>
    </content-card>

    <content-card l-content="content" name="更改尺寸">
      <view class='tabbar-wrapper'>
      <l-tabbar
        position="custom"
        color="{{config2.color}}"
        selected-color="{{config2.selectedColor}}"
        border-style="{{config2.borderStyle}}"
        fontSize="{{config2.fontSize}}"
        backgroundColor="{{config2.backgroundColor}}"
        list="{{config2.list}}"/> 
      </view>
    </content-card>

      <!-- <content-card l-content="content" name="设置背景色">
