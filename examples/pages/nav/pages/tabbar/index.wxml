      </view>
    </content-card>
  
    <content-card l-content="content" name="经典案例-闲鱼APP">
      <view class='tabbar-wrapper'>
        <l-tabbar
          position="custom"
          list="{{config4.list}}"/> 
      </view>
    </content-card>
 
    <content-card l-content="content" name="经典案例-淘宝APP">
      <view class='tabbar-wrapper'>
        <l-tabbar
          position="custom"
          color="{{config5.color}}"
          selectedColor="{{config5.selectedColor}}"
          backgroundImg="{{config5.backgroundImg}}"
          list="{{config5.list}}"/> 
      </view>
    </content-card>
  </content-title>
</view>