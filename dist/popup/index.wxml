<view wx:if="{{show}}" class="container-popup l-class" style="z-index:{{zIndex}};" catchtouchmove="doNothingMove">
  <view class="container-bg container-bg-{{status}} l-bg-class"></view>
  <view class="popup-content {{ show ? ((direction===null)?contentAlign:direction) : ''}} popup-fade-{{direction===null?contentAlign:direction}}-active-{{(transition===null?animation:transition) ? status:''}} l-panel-class" catchtap="onPopupTap">
    <view catchtap="doNothingTap">
      <slot></slot>
    </view>
  </view>
</view>
